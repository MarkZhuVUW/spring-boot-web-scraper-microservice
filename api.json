{
  "openapi": "3.0.3",
  "info": {
    "title": "Spring Boot Web Scraper Service",
    "description": "Spring Boot Web Scraper Service API",
    "version": "${version}"
  },
  "paths": {
    "/scrape/items": {
      "get": {
        "tags": [
          "search"
        ],
        "description": "Scrape an online shopping website",
        "operationId": "scrapeSearchResults",
        "parameters": [
          {
            "name": "onlineShopName",
            "in": "query",
            "required": true,
            "description": "Name of the online shopping provider. e.g. Countdown.",
            "schema": {
              "$ref": "#/components/schemas/OnlineShopDto"
            }
          },
          {
            "name": "searchString",
            "in": "query",
            "required": true,
            "description": "A search string representing the item(s) you want to search for.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetOnlineShoppingItemsResponse"
                }
              }
            }
          },
          "default": {
            "description": "Error scraping onlineShoppingItems.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/search/items": {
      "get": {
        "tags": [
          "search"
        ],
        "description": "Get online shopping items for of online shopping website",
        "operationId": "getOnlineShoppingItems",
        "parameters": [],
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetOnlineShoppingItemsResponse"
                }
              }
            }
          },
          "default": {
            "description": "Error getting onlineShoppingItems.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "search"
        ],
        "description": "Create OnlineShoppingItem. ",
        "operationId": "createOnlineShoppingItems",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOnlineShoppingItemsRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "created onlineShoppingItem.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error creating onlineShoppingItem.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "search"
        ],
        "description": "Update OnlineShoppingItems. ",
        "operationId": "updateOnlineShoppingItems",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateOnlineShoppingItemsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated onlineShoppingItem.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error updating onlineShoppingItem.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "search"
        ],
        "description": "Delete OnlineShoppingItems. ",
        "operationId": "deleteOnlineShoppingItems",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeleteOnlineShoppingItemsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "deleted onlineShoppingItems.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error deleting onlineShoppingItems.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/search/items/{shopName}/{name}": {
      "get": {
        "tags": [
          "search"
        ],
        "description": "Get an item by shop name and item name",
        "operationId": "getOnlineShoppingItem",
        "parameters": [
          {
            "name": "shopName",
            "in": "path",
            "required": true,
            "description": "shop name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "path",
            "required": true,
            "description": "item name",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetOnlineShoppingItemResponse"
                }
              }
            }
          },
          "default": {
            "description": "Error getting onlineShoppingItem.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "search"
        ],
        "description": "Update an item by shop name and item name.",
        "operationId": "updateOnlineShoppingItem",
        "parameters": [
          {
            "name": "shopName",
            "in": "path",
            "required": true,
            "description": "shop name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "path",
            "required": true,
            "description": "item name",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateOnlineShoppingItemRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated onlineShoppingItem.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error creating onlineShoppingItem.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/sqsMessages/onlineShoppingItems": {
      "post": {
        "tags": [
          "sqs"
        ],
        "description": "get onlineShoppingItems and push them as messages to SQS queue.",
        "operationId": "sqsProduce",

        "responses": {
          "200": {
            "description": "Pushed messages to SQS queue.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error pushing messages to SQS queue",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "sqs"
        ],
        "description": "Poll onlineShoppingItem messages from SQS queue and update onlineShoppingItems",
        "operationId": "sqsPoll",

        "responses": {
          "200": {
            "description": "Successfully polled messages from SQS queue.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error polling messages from SQS queue",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OnlineShopDto": {
        "type": "string",
        "enum": [
          "GOOGLE_SHOPPING"
        ]
      },
      "OnlineShoppingItemDto": {
        "type": "object",
        "properties": {
          "onlineShop": {
            "$ref": "#/components/schemas/OnlineShopDto"
          },
          "onlineShopName": {
            "type": "string"
          },
          "salePrice": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "isSaved": {
            "type": "boolean"
          },
          "imageUrl": {
            "type": "string"
          },
          "href": {
            "type": "string"
          },
          "uuid": {
            "type": "string",
            "description": "Unique id of the item. (In the case of Countdown it is barcode)"
          },
          "userId": {
            "type": "string",
            "description": "Unique id of the user."
          },
          "lastModifiedDate": {
            "type": "string",
            "description": "last modified date."
          }
        }
      },
      "UpdateOnlineShoppingItemsRequest": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "UpdateOnlineShoppingItemRequest": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "$ref": "#/components/schemas/OnlineShoppingItemDto"
          }
        }
      },
      "DeleteOnlineShoppingItemsRequest": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "CreateOnlineShoppingItemsRequest": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "GetOnlineShoppingItemsResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "GetOnlineShoppingItemResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/OnlineShoppingItemDto"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }

  }
}