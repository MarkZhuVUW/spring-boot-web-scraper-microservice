{
  "openapi": "3.0.3",
  "info": {
    "title": "Spring Boot Web Scraper Service",
    "description": "Spring Boot Web Scraper Service API",
    "version": "${version}"
  },
  "paths": {
    "/search/items": {
      "get": {
        "tags": [
          "search"
        ],
        "description": "Get search results for of online shopping website",
        "operationId": "getSearchResults",
        "parameters": [
          {
            "name": "onlineShopName",
            "in": "query",
            "required": true,
            "description": "Name of the online shopping provider. e.g. Countdown.",
            "schema": {
              "$ref": "#/components/schemas/OnlineShopDto"
            }
          },
          {
            "name": "searchString",
            "in": "query",
            "required": true,
            "description": "A search string representing the item(s) you want to search for.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetSearchResultsResponse"
                }
              }
            }
          },
          "default": {
            "description": "Error getting onlineShoppingItems.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "search"
        ],
        "description": "Create OnlineShoppingItem. ",
        "operationId": "createOnlineShoppingItems",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSearchResultsRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "created onlineShoppingItem.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error creating onlineShoppingItem.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "search"
        ],
        "description": "Update OnlineShoppingItems. ",
        "operationId": "updateOnlineShoppingItems",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateSearchResultsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated onlineShoppingItem.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error updating onlineShoppingItem.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "search"
        ],
        "description": "Delete OnlineShoppingItems. ",
        "operationId": "deleteOnlineShoppingItems",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeleteSearchResultsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "deleted onlineShoppingItems.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error deleting onlineShoppingItems.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/search/items/{id}": {
      "patch": {
        "description": "Update an item",
        "operationId": "updateOnlineShoppingItem",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Item uuid",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateSearchResultRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated onlineShoppingItem.",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "Error creating onlineShoppingItem.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OnlineShopDto": {
        "type": "string",
        "enum": [
          "COUNTDOWN",
          "PET_CO",
          "THE_WAREHOUSE",
          "GOOGLE_SHOPPING"
        ]
      },
      "OnlineShoppingItemDto": {
        "type": "object",
        "properties": {
          "onlineShop": {
            "$ref": "#/components/schemas/OnlineShopDto"
          },
          "onlineShopName": {
            "type": "string"
          },
          "salePrice": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "isSaved": {
            "type": "boolean"
          },
          "imageUrl": {
            "type": "string"
          },
          "href": {
            "type": "string"
          },
          "uuid": {
            "type": "string",
            "description": "Unique id of the item. (In the case of Countdown it is barcode)"
          },
          "userId": {
            "type": "string",
            "description": "Unique id of the user."
          }
        }
      },
      "UpdateSearchResultsRequest": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "UpdateSearchResultRequest": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "DeleteSearchResultsRequest": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "CreateSearchResultsRequest": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "GetSearchResultsResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OnlineShoppingItemDto"
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }

  }
}